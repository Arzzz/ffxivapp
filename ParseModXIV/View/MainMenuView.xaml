    <UserControl x:Class="ParseModXIV.View.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ParseModXIV.ViewModel"
             xmlns:me="clr-namespace:ParseModXIV"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d">

    <UserControl.Resources>
        <local:MainMenuViewModel x:Key="MainMenuViewModelDataSource" />
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot" DataContext="{Binding Source={StaticResource MainMenuViewModelDataSource}}">
        <DockPanel>
            <DockPanel.Effect>
                <DropShadowEffect ShadowDepth="0" Direction="0" BlurRadius="3" />
            </DockPanel.Effect>
            <Menu Height="23" IsMainMenu="True" Background="WhiteSmoke">
                <MenuItem Header="File">
                    <MenuItem Header="Default Settings" Name="gui_DefaultSettings"
                              Command="{Binding Path=DefaultSettingsCommand}" />
                    <MenuItem Header="Exit" Name="gui_Exit"
                              Command="{Binding Path=ExitCommand}" />
                </MenuItem>
                <MenuItem Header="View">
                    <MenuItem Header="Mob Ability (Chat)" IsChecked="{Binding Source={x:Static me:Settings.Default}, Path=Gui_MobAbility, Mode=TwoWay}" Name="Gui_MobAbility"
                              Command="{Binding ToggleMobAbilityCommand}"/>
                    <MenuItem Header="Party Stats" IsChecked="{Binding Source={x:Static me:Settings.Default}, Path=Gui_PartyStats, Mode=TwoWay}" Name="Gui_PartyStats"
                              Command="{Binding TogglePartyStatsCommand}"/>
                    <MenuItem Header="Healing Stats" IsChecked="{Binding Source={x:Static me:Settings.Default}, Path=Gui_HealingStats, Mode=TwoWay}" Name="Gui_HealingStats"
                              Command="{Binding ToggleHealingStatsCommand}"/>
                    <MenuItem Header="Damage Stats" IsChecked="{Binding Source={x:Static me:Settings.Default}, Path=Gui_DamageStats, Mode=TwoWay}" Name="Gui_DamageStats"
                              Command="{Binding ToggleDamageStatsCommand}"/>
                    <MenuItem Header="Monster Stats" IsChecked="{Binding Source={x:Static me:Settings.Default}, Path=Gui_MonsterStats, Mode=TwoWay}" Name="Gui_MonsterStats"
                              Command="{Binding ToggleMonsterStatsCommand}"/>
                    <MenuItem Header="Debug" IsChecked="{Binding Source={x:Static me:Settings.Default}, Path=Gui_Debug, Mode=TwoWay}" Name="Gui_Debug"
                              Command="{Binding ToggleDebugCommand}"/>
                </MenuItem>
                <MenuItem Header="Log Tools">
                    <MenuItem Header="Settings" Name="gui_Settings"
                              Command="{Binding Path=ShowSettingsCommand}" />
                    <MenuItem Header="Upload Battle Data" IsChecked="{Binding Source={x:Static me:Settings.Default}, Path=Gui_UploadData, Mode=TwoWay}" Name="gui_UploadData"
                              Command="{Binding Path=UploadDataCommand}" />
                    <MenuItem Header="Auto Save Raw (XML)" IsChecked="{Binding Source={x:Static me:Settings.Default}, Path=Gui_SaveLog, Mode=TwoWay}" Name="gui_SaveLog"
                              Command="{Binding Path=SaveLogCommand}" />
                    <MenuItem IsEnabled="False" Header="Auto Save Parsed (XML)" IsChecked="{Binding Source={x:Static me:Settings.Default}, Path=Gui_ExportXML, Mode=TwoWay}" Name="gui_ExportXML"
                              Command="{Binding Path=ExportXmlCommand}" />
                    <Separator/>
                    <MenuItem Header="Always On Top" IsChecked="{Binding Source={x:Static me:Settings.Default}, 
Path=TopMost, Mode=TwoWay}" Name="gui_TopMost" 
                              Command="{Binding Path=TopMostCommand}" />
                    <Separator/>
                    <MenuItem Header="Options" Name="gui_Options" IsEnabled="False"
                              Command="{Binding Path=OptionsCommand}" />
                </MenuItem>
                <MenuItem Header="Help">
                    <MenuItem Header="About" Name="gui_About"
                              Command="{Binding Path=AboutCommand}" />
                </MenuItem>
                <MenuItem Header="Character">
                    <ComboBox Name="gui_PIDSelect" />
                    <MenuItem Header="Set Process" Name="gui_SetProcess"
                              Command="{Binding Path=SetProcessCommand}" />
                    <MenuItem Header="Refresh List" Name="gui_RefreshList"
                              Command="{Binding Path=RefreshListCommand}" />
                </MenuItem>
            </Menu>
        </DockPanel>
    </Grid>
</UserControl>
