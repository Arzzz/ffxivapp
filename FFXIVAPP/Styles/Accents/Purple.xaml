<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="HighlightDarkColor">#FFb400ff</Color>
    <Color x:Key="HighlightLightColor">#FFb400ff</Color>
    <Color x:Key="AccentColor">#CCb400ff</Color>
    <Color x:Key="AccentColor2">#99b400ff</Color>
    <Color x:Key="AccentColor3">#66b400ff</Color>
    <Color x:Key="AccentColor4">#33b400ff</Color>
    <LinearGradientBrush x:Key="BrandingBrush" StartPoint="1.002,0.5" EndPoint="0.001,0.5">
        <GradientStop Offset="0" Color="{DynamicResource HighlightDarkColor}" />
        <GradientStop Offset="1" Color="#FFFFB519" />
    </LinearGradientBrush>
    <SolidColorBrush x:Key="AccentColorBrush"
                     Color="{DynamicResource AccentColor}" />
</ResourceDictionary>