<UserControl x:Class="FFXIVAPP.Controls.FlowDoc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:me="clr-namespace:FFXIVAPP"
             mc:Ignorable="d">

    <FlowDocumentReader x:Name="_FDR"
                        BorderBrush="#FF939393"
                        BorderThickness="1"
                        IsTwoPageViewEnabled="False"
                        MaxZoom="300"
                        MinZoom="50"
                        ViewingMode="Scroll"
                        Zoom="{Binding Source={x:Static me:Settings.Default},
                                       Path=LogZoomLevel,
                                       Mode=TwoWay}">
        <FlowDocument x:Name="_FD"
                      Background="Black"
                      ColumnWidth="99999"
                      Foreground="White"
                      PagePadding="5"
                      TextAlignment="Left">
            <FlowDocument.Resources>
                <Style TargetType="{x:Type Paragraph}">
                    <Setter Property="Margin" Value="0.5" />
                </Style>
            </FlowDocument.Resources>
        </FlowDocument>
    </FlowDocumentReader>
</UserControl>