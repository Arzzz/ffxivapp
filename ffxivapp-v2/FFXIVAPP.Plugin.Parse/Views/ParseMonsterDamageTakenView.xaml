<UserControl x:Class="FFXIVAPP.Plugin.Parse.Views.ParseMonsterDamageTakenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:FFXIVAPP.Plugin.Parse.Controls"
             xmlns:Converters="clr-namespace:FFXIVAPP.Common.Converters;assembly=FFXIVAPP.Common"
             xmlns:Models="clr-namespace:FFXIVAPP.Plugin.Parse.Models"
             xmlns:Parse="clr-namespace:FFXIVAPP.Plugin.Parse"
             xmlns:Properties="clr-namespace:FFXIVAPP.Plugin.Parse.Properties"
             xmlns:Utilities="clr-namespace:FFXIVAPP.Common.Utilities;assembly=FFXIVAPP.Common"
             xmlns:ViewModels="clr-namespace:FFXIVAPP.Plugin.Parse.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Converters:VisibilityConverter x:Key="VisibilityConverter" />
        <Converters:BooleanToWidthConverter x:Key="BooleanToWidthConverter" />
        <x:Static x:Key="ParseMonsterDamageTakenViewModel"
                  Member="ViewModels:ParseMonsterDamageTakenViewModel.Instance" />
        <x:Static x:Key="PluginViewModel"
                  Member="Parse:PluginViewModel.Instance" />
        <x:Static x:Key="Settings"
                  Member="Properties:Settings.Default" />
        <x:Static x:Key="Parser"
                  Member="Models:ParseControl.Instance" />
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot"
          DataContext="{StaticResource ParseMonsterDamageTakenViewModel}">
        <ScrollViewer>
            <StackPanel>
                <Controls:EmptyListView x:Name="MonsterOverallDamageTaken"
                                        DataContext="{Binding Timeline.Monster,
                                                              Source={StaticResource Parser}}"
                                        ItemsSource="{Binding}">
                    <ListView.View>
                        <GridView AllowsColumnReorder="False">
                            <GridViewColumn DisplayMemberBinding="{Binding Name}"
                                            Header="{Binding Locale[parse_NameHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="Name" />
                            <GridViewColumn DisplayMemberBinding="{Binding TotalOverallDrops}"
                                            Header="{Binding Locale[parse_TotalOverallDropsHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="TotalOverallDrops" />
                            <GridViewColumn DisplayMemberBinding="{Binding TotalKilled}"
                                            Header="{Binding Locale[parse_TotalKilledHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="TotalKilled" />
                            <GridViewColumn DisplayMemberBinding="{Binding AverageHP,
                                                                           StringFormat=\{0:F2\}}"
                                            Header="{Binding Locale[parse_AverageHPHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="AverageHP" />
                            <GridViewColumn Width="{Binding ShowColumnTotalOverallDamageTaken,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding TotalOverallDamageTaken}"
                                            Header="{Binding Locale[parse_TotalOverallDamageTakenHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="TotalOverallDamageTaken" />
                            <GridViewColumn Width="{Binding ShowColumnRegularDamageTaken,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding RegularDamageTaken}"
                                            Header="{Binding Locale[parse_RegularDamageTakenHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="RegularDamageTaken" />
                            <GridViewColumn Width="{Binding ShowColumnCriticalDamageTaken,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding CriticalDamageTaken}"
                                            Header="{Binding Locale[parse_CriticalDamageTakenHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="CriticalDamageTaken" />
                            <GridViewColumn Width="{Binding ShowColumnTotalDamageTakenActionsUsed,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding TotalDamageTakenActionsUsed}"
                                            Header="{Binding Locale[parse_TotalDamageTakenActionsUsedHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="TotalDamageTakenActionsUsed" />
                            <GridViewColumn Width="{Binding ShowColumnDTPS,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DTPS,
                                                                           StringFormat=\{0:F2\}}"
                                            Header="{Binding Locale[parse_DTPSHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DTPS" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenDOT,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenDOT}"
                                            Header="{Binding Locale[parse_DamageTakenDOTHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenDOT" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenDOTAverage,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenDOTAverage,
                                                                           StringFormat=\{0:F2\}}"
                                            Header="{Binding Locale[parse_DamageTakenDOTAverageHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenDOTAverage" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenRegHit,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenRegHit}"
                                            Header="{Binding Locale[parse_DamageTakenRegHitHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenRegHit" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenRegMiss,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenRegMiss}"
                                            Header="{Binding Locale[parse_DamageTakenRegMissHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenRegMiss" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenRegAccuracy,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenRegAccuracy,
                                                                           StringFormat=\{0:P2\}}"
                                            Header="{Binding Locale[parse_DamageTakenRegAccuracyHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenRegAccuracy" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenRegLow,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenRegLow}"
                                            Header="{Binding Locale[parse_DamageTakenRegLowHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenRegLow" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenRegHigh,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenRegHigh}"
                                            Header="{Binding Locale[parse_DamageTakenRegHighHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenRegHigh" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenRegAverage,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenRegAverage,
                                                                           StringFormat=\{0:F2\}}"
                                            Header="{Binding Locale[parse_DamageTakenRegAverageHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenRegAverage" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenRegMod,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenRegMod,
                                                                           StringFormat=\{0:F2\}}"
                                            Header="{Binding Locale[parse_DamageTakenRegModHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenRegMod" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenRegModAverage,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenRegModAverage,
                                                                           StringFormat=\{0:F2\}}"
                                            Header="{Binding Locale[parse_DamageTakenRegModAverageHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenRegModAverage" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenCritHit,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenCritHit}"
                                            Header="{Binding Locale[parse_DamageTakenCritHitHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenCritHit" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenCritPercent,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenCritPercent,
                                                                           StringFormat=\{0:P2\}}"
                                            Header="{Binding Locale[parse_DamageTakenCritPercentHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenCritPercent" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenCritLow,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenCritLow}"
                                            Header="{Binding Locale[parse_DamageTakenCritLowHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenCritLow" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenCritHigh,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenCritHigh}"
                                            Header="{Binding Locale[parse_DamageTakenCritHighHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenCritHigh" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenCritAverage,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenCritAverage,
                                                                           StringFormat=\{0:F2\}}"
                                            Header="{Binding Locale[parse_DamageTakenCritAverageHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenCritAverage" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenCritMod,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenCritMod,
                                                                           StringFormat=\{0:F2\}}"
                                            Header="{Binding Locale[parse_DamageTakenCritModHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenCritMod" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenCritModAverage,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenCritModAverage,
                                                                           StringFormat=\{0:F2\}}"
                                            Header="{Binding Locale[parse_DamageTakenCritModAverageHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenCritModAverage" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenCounter,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenCounter}"
                                            Header="{Binding Locale[parse_DamageTakenCounterHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenCounter" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenCounterPercent,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenCounterPercent,
                                                                           StringFormat=\{0:P2\}}"
                                            Header="{Binding Locale[parse_DamageTakenCounterPercentHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenCounterPercent" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenCounterMod,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenCounterMod,
                                                                           StringFormat=\{0:F2\}}"
                                            Header="{Binding Locale[parse_DamageTakenCounterModHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenCounterMod" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenCounterModAverage,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenCounterModAverage,
                                                                           StringFormat=\{0:F2\}}"
                                            Header="{Binding Locale[parse_DamageTakenCounterModAverageHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenCounterModAverage" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenBlock,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenBlock}"
                                            Header="{Binding Locale[parse_DamageTakenBlockHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenBlock" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenBlockPercent,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenBlockPercent,
                                                                           StringFormat=\{0:P2\}}"
                                            Header="{Binding Locale[parse_DamageTakenBlockPercentHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenBlockPercent" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenBlockMod,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenBlockMod,
                                                                           StringFormat=\{0:F2\}}"
                                            Header="{Binding Locale[parse_DamageTakenBlockModHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenBlockMod" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenBlockModAverage,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenBlockModAverage,
                                                                           StringFormat=\{0:F2\}}"
                                            Header="{Binding Locale[parse_DamageTakenBlockModAverageHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenBlockModAverage" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenParry,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenParry}"
                                            Header="{Binding Locale[parse_DamageTakenParryHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenParry" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenParryPercent,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenParryPercent,
                                                                           StringFormat=\{0:P2\}}"
                                            Header="{Binding Locale[parse_DamageTakenParryPercentHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenParryPercent" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenParryMod,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenParryMod,
                                                                           StringFormat=\{0:F2\}}"
                                            Header="{Binding Locale[parse_DamageTakenParryModHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenParryMod" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenParryModAverage,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenParryModAverage,
                                                                           StringFormat=\{0:F2\}}"
                                            Header="{Binding Locale[parse_DamageTakenParryModAverageHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenParryModAverage" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenResist,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenResist}"
                                            Header="{Binding Locale[parse_DamageTakenResistHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenResist" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenResistPercent,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenResistPercent,
                                                                           StringFormat=\{0:P2\}}"
                                            Header="{Binding Locale[parse_DamageTakenResistPercentHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenResistPercent" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenResistMod,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenResistMod,
                                                                           StringFormat=\{0:F2\}}"
                                            Header="{Binding Locale[parse_DamageTakenResistModHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenResistMod" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenResistModAverage,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenResistModAverage,
                                                                           StringFormat=\{0:F2\}}"
                                            Header="{Binding Locale[parse_DamageTakenResistModAverageHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenResistModAverage" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenEvade,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenEvade}"
                                            Header="{Binding Locale[parse_DamageTakenEvadeHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenEvade" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenEvadePercent,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenEvadePercent,
                                                                           StringFormat=\{0:P2\}}"
                                            Header="{Binding Locale[parse_DamageTakenEvadePercentHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenEvadePercent" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenEvadeMod,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenEvadeMod,
                                                                           StringFormat=\{0:F2\}}"
                                            Header="{Binding Locale[parse_DamageTakenEvadeModHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenEvadeMod" />
                            <GridViewColumn Width="{Binding ShowColumnDamageTakenEvadeModAverage,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding DamageTakenEvadeModAverage,
                                                                           StringFormat=\{0:F2\}}"
                                            Header="{Binding Locale[parse_DamageTakenEvadeModAverageHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DamageTakenEvadeModAverage" />
                            <GridViewColumn Width="{Binding ShowColumnPercentOfTotalOverallDamageTaken,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding PercentOfTotalOverallDamageTaken,
                                                                           StringFormat=\{0:P2\}}"
                                            Header="{Binding Locale[parse_PercentOfTotalOverallDamageTakenHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="PercentOfTotalOverallDamageTaken" />
                            <GridViewColumn Width="{Binding ShowColumnPercentOfRegularDamageTaken,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding PercentOfRegularDamageTaken,
                                                                           StringFormat=\{0:P2\}}"
                                            Header="{Binding Locale[parse_PercentOfRegularDamageTakenHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="PercentOfRegularDamageTaken" />
                            <GridViewColumn Width="{Binding ShowColumnPercentOfCriticalDamageTaken,
                                                            Source={StaticResource Settings},
                                                            Converter={StaticResource BooleanToWidthConverter}}"
                                            DisplayMemberBinding="{Binding PercentOfCriticalDamageTaken,
                                                                           StringFormat=\{0:P2\}}"
                                            Header="{Binding Locale[parse_PercentOfCriticalDamageTakenHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="PercentOfCriticalDamageTaken" />

                        </GridView>
                    </ListView.View>
                </Controls:EmptyListView>
                <StackPanel Orientation="Horizontal">
                    <CheckBox Margin="5"
                              IsChecked="{Binding MonsterDamageTakenByAction,
                                                  Source={StaticResource Settings}}" />
                    <TextBlock Margin="2"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="12"
                               FontWeight="Bold"
                               Text="{Binding Locale[parse_MonsterDamageTakenByActionText],
                                              Source={StaticResource PluginViewModel}}" />
                </StackPanel>
                <Controls:DamageTakenListView x:Name="MonsterDamageTakenByAction"
                                              DataContext="{Binding SelectedItem,
                                                                    ElementName=MonsterOverallDamageTaken,
                                                                    NotifyOnTargetUpdated=True,
                                                                    NotifyOnSourceUpdated=True}"
                                              ItemsSource="{Binding DamageTakenByAction}"
                                              Visibility="{Binding MonsterDamageTakenByAction,
                                                                   Source={StaticResource Settings},
                                                                   Converter={StaticResource VisibilityConverter}}" />
                <StackPanel Orientation="Horizontal">
                    <CheckBox Margin="5"
                              IsChecked="{Binding MonsterDrops,
                                                  Source={StaticResource Settings}}" />
                    <TextBlock Margin="2"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="12"
                               FontWeight="Bold"
                               Text="{Binding Locale[parse_MonsterDropsByMonsterText],
                                              Source={StaticResource PluginViewModel}}" />
                </StackPanel>
                <Controls:EmptyListView x:Name="MonsterDropsByMonster"
                                        DataContext="{Binding SelectedItem,
                                                              ElementName=MonsterOverallDamageTaken,
                                                              NotifyOnTargetUpdated=True,
                                                              NotifyOnSourceUpdated=True}"
                                        ItemsSource="{Binding DropsByMonster}"
                                        Visibility="{Binding MonsterDrops,
                                                             Source={StaticResource Settings},
                                                             Converter={StaticResource VisibilityConverter}}">
                    <ListView.View>
                        <GridView AllowsColumnReorder="False">

                            <GridViewColumn DisplayMemberBinding="{Binding Name}"
                                            Header="{Binding Locale[parse_NameHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="Name" />
                            <GridViewColumn DisplayMemberBinding="{Binding TotalDrops}"
                                            Header="{Binding Locale[parse_TotalDropsHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="TotalDrops" />
                            <GridViewColumn DisplayMemberBinding="{Binding DropPercent,
                                                                           StringFormat=\{0:P2\}}"
                                            Header="{Binding Locale[parse_DropPercentHeader],
                                                             Source={StaticResource PluginViewModel}}"
                                            Utilities:GridViewSort.PropertyName="DropPercent" />
                        </GridView>
                    </ListView.View>
                </Controls:EmptyListView>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>