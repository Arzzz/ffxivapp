<Window x:Class="Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:Launcher.View"
        xmlns:system="clr-namespace:System.Configuration;assembly=System"
        xmlns:me="clr-namespace:Launcher" 
        mc:Ignorable="d"
        Title="Launcher" Loaded="Window_Loaded" Closed="Window_Closed" Closing="Window_Closing" Icon="/Launcher;component/Launcher.ico" StateChanged="Window_StateChanged" WindowStyle="None"
        Height="340" Width="240" MinWidth="240" MinHeight="340" MaxWidth="240" MaxHeight="340" ResizeMode="CanResize" WindowStartupLocation="CenterScreen">

    <Grid x:Name="LayoutRoot">
        <DockPanel LastChildFill="True">
            <DockPanel DockPanel.Dock="Top">
                <local:MainToolBarView x:Name="MainToolBarView"/>
            </DockPanel>
            <DockPanel>
                <local:MainView x:Name="MainView"/>
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>